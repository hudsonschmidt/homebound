APP_ENV=dev
SECRET_KEY=dev_change_me
TIMEZONE=UTC
DATABASE_URL=sqlite+aiosqlite:///./homebound.db

# Messaging (dev defaults)
EMAIL_BACKEND=console
SMTP_HOST=localhost
SMTP_PORT=1025
SMS_BACKEND=dummy

PUBLIC_BASE_URL=http://127.0.0.1:8000

# iOS Universal Links
IOS_TEAM_ID=YOUR_TEAM_ID
IOS_BUNDLE_ID=com.example.homebound
UNIVERSAL_LINK_PATHS=/t/*

# CORS allowlist (CSV or JSON)
CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000,http://127.0.0.1:8000

# Push / APNs
PUSH_BACKEND=dummy           # set to 'apns' when ready
APNS_USE_SANDBOX=true        # sandbox = development APNs endpoint
APNS_KEY_ID=
APNS_PRIVATE_KEY_PATH=       # e.g., backend/.keys/AuthKey_ABC123.p8
APNS_PRIVATE_KEY=            # optional inline .p8 contents
